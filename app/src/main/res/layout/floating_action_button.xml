<?xml version="1.0" encoding="utf-8"?>
<com.getbase.floatingactionbutton.FloatingActionsMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:id="@+id/floating_action_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    app:elevation="6dp"
    app:fab_addButtonColorNormal="@color/colorAccent"
    app:fab_addButtonColorPressed="@color/light_gray"
    app:fab_labelStyle="@style/menu_labels_style"
    app:fab_labelsPosition="left"
    app:pressedTranslationZ="12dp"
    fab:fab_addButtonSize="mini">

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_title="Add to wishlist" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_title="Add to compare list" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_title="Add to cart" />

</com.getbase.floatingactionbutton.FloatingActionsMenu>

