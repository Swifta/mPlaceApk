<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_header_frame"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/home_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <TextView
        android:id="@+id/drawer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        android:textColor="@color/colorControlNormal" />

    <TextView
        android:id="@+id/drawer_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:text="@string/navigation_header_2"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/drawer_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:text="@string/navigation_header_3"
        android:textColor="@color/colorPrimary" />

</LinearLayout><!-- From: file:/Users/moyinoluwa/Documents/SwiftaAndroidStudioProjects/Marketplace/app/src/main/res/layout/navigation_header.xml -->